<Window x:Class="Opening_Tools.ProgressWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Opening_Tools"
             mc:Ignorable="d" Width="400" Height="100" ResizeMode="NoResize" WindowStyle="None" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="progressBar1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="10
                     "   Grid.Row="1" Maximum="7"/>
        <TextBlock x:Name="Tb" Text="0%" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" />
        <Label x:Name="Labl1" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.Row="0"/>
    </Grid>
</Window>
